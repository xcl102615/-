  <script>
    $(function () {
      /*****************************定时器查询可接订单*****************************/
      var time = setInterval(function () {
        getAccessible(function (data) {
          if (data.obj.length > 0) {
            $("#notification").attr("data-notification", data.obj.length);
            document.getElementById("audio").play();
            btn();//手机震动
          }
        })
      }, 20000);

      //获取用户余额
      doDataAll("<%=basePath%>/deliveryMoney/findBalance","",function (data) {
        if(data.code>0){
          $("#balance").val(data.obj);
          $("#money").attr("placeholder","本次最多可转出"+data.obj+"元");
        }
      });

      //提现
      $("#submit").click(function () {
        var money=parseFloat($("#money").val());
        var balance=parseFloat($("#balance").val());
        if (money>balance||money<=0){
          alert("提现金额错误");
          return ;
        }
        doDataAll("<%=basePath%>/deliveryMoney/cashWithdrawal",{"money":money},function (data) {
          if(data.code>0){
            alert("提现申请成功");
            window.location.reload();
          }else{
            alert("提现失败");
          }
        })
      })

    })

  </script>
