<%@ page contentType="text/html;charset=UTF-8" language="java"%>
<%@ include file="../../header/admin.jsp" %>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            商户审核
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>商户id</th>
                                        <th>店铺id</th>
                                        <th>法人姓名</th>
                                        <th>商户营业执照</th>
                                        <th>手机号</th>
                                        <th>创建时间</th>
                                        <th>状态</th>
                                        <th>操作</th>
                                    </tr>
                                    </thead>
                                    <tbody id="tbody">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<script>
    $(function () {
        //加载待审核商铺
        doDataAll("<%=basePath%>/shop/findShop",{"status":"0"},function (data) {
           if(data.code>0){
               $.each(data.obj,function () {
                   $("#tbody").append(" <tr>\n" +
                       "                                        <td>"+this.user.id+"</td>\n" +
                       "                                        <td >"+this.id+"</td>\n" +
                       "                                        <td>"+this.user.name+"</td>\n" +
                       "                                        <td>暂无</td>\n" +
                       "                                        <td>"+this.phone+"</td>\n" +
                       "                                        <td>"+this.createDate+"</td>\n" +
                       "                                        <td>"+this.status+"</td>\n" +
                       "                                        <td id="+this.id+"> <button class=\"btn btn-rounded btn-success\">通过</button><button class=\"btn btn-rounded btn-danger\">不通过</button></td>\n" +
                       "                                    </tr>")
               })
           }
        });

        //通过按钮
        $("#tbody").on("click",".btn-success",function () {
            var id=$(this).parent().attr("id");

        })
    })
</script>
